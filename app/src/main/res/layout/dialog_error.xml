<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Error Icon -->
        <ImageView
            android:id="@+id/iv_error_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red" />

        <!-- Error Title -->
        <TextView
            android:id="@+id/tv_error_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/textOnPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_error_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_error_icon"
            app:layout_constraintTop_toTopOf="@id/iv_error_icon"
            tools:text="Bağlantı Hatası" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/textOnSecondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_error_icon"
            tools:text="Park bilgileri yüklenirken bir sorun oluştu. Lütfen internet bağlantınızı kontrol edin ve tekrar deneyin." />

        <!-- Button Container -->
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_message">

            <!-- Retry Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_okay"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="@color/colorPrimary"
                android:minWidth="100dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/dialog_confirm"
                android:textAllCaps="false"
                android:textColor="@color/textOnPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="14dp"
                app:rippleColor="@color/colorPrimaryDark" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

