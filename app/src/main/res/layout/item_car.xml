<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorCardBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/ispark_yellow_alpha"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_overlay"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/carIconContainer"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:translationX="2dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/ivCarIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_car"
                    app:tint="@color/black" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/ivDebtIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_debt"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvDebt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Borç: 230 ₺" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvCarName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="BMW 3.20i"
                android:textColor="@color/textOnPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/statusBadge"
                app:layout_constraintStart_toEndOf="@+id/carIconContainer"
                app:layout_constraintTop_toTopOf="@+id/carIconContainer"
                tools:text="BMW 3.20i" />

            <TextView
                android:id="@+id/tvLicensePlate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="34 ABC 123"
                android:textColor="@color/textOnSecondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvCarName"
                app:layout_constraintStart_toStartOf="@+id/tvCarName"
                app:layout_constraintTop_toBottomOf="@+id/tvCarName"
                tools:text="34 ABC 123" />

            <LinearLayout
                android:id="@+id/carDetailsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/carIconContainer"
                app:layout_constraintTop_toBottomOf="@+id/carIconContainer">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_car_2"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvCarType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="sans-serif"
                            android:text="Sedan"
                            android:textColor="@color/textOnPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Sedan" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvLastParkingLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:maxLines="2"
                            android:text="Taksim Meydanı Otoparkı"
                            android:textColor="@color/textOnPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Taksim Meydanı Otoparkı" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCarDetails"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_forward"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@color/black"
                    app:rippleColor="@color/colorPrimaryDark" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>