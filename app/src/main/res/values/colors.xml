<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Ana Renkler -->
    <color name="colorPrimary">#FFD700</color>        <!-- Sarı (İSPARK teması) -->
    <color name="colorPrimaryDark">#E6C200</color>    <!-- Koyu Sarı (Durum çubuğu) -->
    <color name="colorAccent">#000000</color>         <!-- Siyah (ikonlar, başlıklar) -->
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>
    <color name="red">#E21212</color>

    <!-- Arka Planlar -->
    <color name="colorBackground">#FFFFFF</color>     <!-- Beyaz arka plan -->
    <color name="colorCardBackground">#FCF5E5</color> <!-- Kartlar için açık gri -->
    <color name="colorWavyBackground">#FFF8E6</color>
    <color name="colorMojitoBreeze">#FBFFF4</color>

    <color name="ispark_yellow_alpha">#33FFC107</color>

    <!-- Yazı Renkleri -->
    <color name="textPrimary">#212121</color>         <!-- Ana metin -->
    <color name="textSecondary">#757575</color>       <!-- Açıklama/metin altı -->
    <color name="textOnPrimary">#000000</color>
    <color name="textOnSecondary">#757575</color>

    <!-- FAB & Butonlar -->
    <color name="fabColor">#FFD700</color>
    <color name="fabRipple">#CCCC00</color>
    <color name="fabIconColor">#000000</color>

    <!-- Sekme Renkleri -->
    <color name="tabActiveBackground">#FFD700</color>
    <color name="tabInactiveBackground">#FFFFFF</color>
    <color name="tabActiveText">#000000</color>
    <color name="tabInactiveText">#757575</color>

    <!-- Tab Button States - Mevcut paletteki renklerle uyumlu -->
    <color name="tabSelectedBackground">@color/colorPrimary</color>           <!-- #FFD700 - Ana sarı -->
    <color name="tabUnselectedBackground">@color/colorCardBackground</color>  <!-- #FEFEFE - Kart arka planı -->
    <color name="tabSelectedText">@color/textOnPrimary</color>                <!-- #000000 - Sarı üstünde siyah -->
    <color name="tabUnselectedText">@color/textSecondary</color>              <!-- #757575 - İkincil metin -->
    <color name="tabSelectedStroke">@color/colorPrimaryDark</color>           <!-- #E6C200 - Koyu sarı kenar -->
    <color name="tabUnselectedStroke">@color/textSecondary</color>            <!-- #757575 - Gri kenar -->
    <color name="tabSelectedIcon">@color/textOnPrimary</color>                <!-- #000000 - Siyah ikon -->
    <color name="tabUnselectedIcon">@color/textSecondary</color>              <!-- #757575 - Gri ikon -->
    <color name="tabRipple">@color/ispark_yellow_alpha</color>                <!-- #33FFC107 - Sarı ripple efekti -->
    
    <!-- Additional theme colors -->
    <color name="backgroundColor">#F5F5F5</color>            <!-- Ana arka plan -->
    <color name="surfaceColor">#F8F9FA</color>              <!-- Yüzey rengi -->
    <color name="rippleColorLight">#80FFFFFF</color>         <!-- Açık ripple -->
    <color name="transparent">#00000000</color>             <!-- Şeffaf -->
    <color name="drawerTextColor">#333333</color>           <!-- Drawer menü yazı rengi -->
</resources>